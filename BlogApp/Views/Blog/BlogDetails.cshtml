<!DOCTYPE html>
<html lang="tr">

<body>
    <!--//banner-->
    <section class="banner-bottom">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                @foreach (var item in Model){
                    <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="single.html">
                                        <img src="@item.BlogImage" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @item.CreateDate.ToShortDateString()
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="fas fa-tag"></i> @item.Category.CategoryName
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-comment"></i> 15 Comments**
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </div>

                            <h3>
                                @item.BlogTitle
                            </h3>
                            <p>
                                @item.BlogContent
                            </p>
                        </div>
                        @await Component.InvokeAsync("CommentListByBlog",new {id = item.Id})
                        @await Html.PartialAsync("~/Views/Shared/Partials/Common/Partial_AddComment.cshtml")
                    </div>

                }


                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">

                        @await Html.PartialAsync("~/Views/NewsLetter/Subscribe.cshtml")
                        @await Component.InvokeAsync("CategoryList")
                        @await Component.InvokeAsync("LastBlogsByAuthor")
                        
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
</body>

</html>
