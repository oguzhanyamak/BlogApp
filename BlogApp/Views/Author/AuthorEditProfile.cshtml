@{
    ViewData["Title"] = "AuthorEditProfile";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}
@model Author

@using (Html.BeginForm("AuthorEditProfile", "Author", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Bilgileriniz</h4>
                <form class="forms-sample mt-5">
                    @Html.HiddenFor(x => x.Id, new { @class = "form-control"})
                    @Html.HiddenFor(x => x.Status, new { @class = "form-control"})
                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @Html.TextBoxFor(x => x.AuthorMail, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                       @Html.PasswordFor(x => x.AuthorPassword, new {@class = "form-control"})
                    </div>

                    <div class="form-group">
                        <label>File upload</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                           @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control"})
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Textarea</label>
                        @Html.TextAreaFor(x => x.AuthorAbout,10,3, new {@class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}