@model List<Blog>

@{
    ViewData["Title"] = "GetBlogsByAuthor";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Blog Başlığı</th>
            <th scope="col">Oluşturulma Tarihi</th>
            <th scope="col">Kategori</th>
            <th scope="col">Durum</th>
            <th scope="col">Sil</th>
            <th scope="col">Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.BlogTitle</td>
                <td>@item.CreateDate.ToShortDateString()</td>
                <td>@item.Category.CategoryName</td>
                @if(item.Status == true)
                {
                    <td>Aktif</td>
                }
                else
                {
                    <td>Pasif</td>
                }
                <td><a href="/Blog/DeleteBlog/@item.Id" class="btn btn-danger"> Sil</a></td>
                <td><a href="/Blog/EditBlog/@item.Id" class="btn btn-warning"> Düzenle</a></td>
            </tr>
        }

    </tbody>
</table>