
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@model AppUserRegisterModel
<!DOCTYPE html>
<html lang="tr">
<body>
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Register Now</h3>
            <div class="inner-sec">
                <div class="login p-5 bg-light mx-auto mw-100">
                    <form asp-action="Index" asp-controller="Register">
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label>First name</label>
                                <input type="text" class="form-control" asp-for="@Model.name" placeholder="Ad">
                                <span class="text-danger" asp-validation-for="@Model.name"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Last name</label>
                                <input type="text" class="form-control" placeholder="Soyad" asp-for="@Model.surname">
                                <span class="text-danger" asp-validation-for="@Model.surname"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Password</label>
                                <input type="password" class="form-control" placeholder="Şifre" asp-for="@Model.password">
                                <span class="text-danger" asp-validation-for="@Model.password"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Confirm Password</label>
                                <input type="password" class="form-control" placeholder="Şifre Tekrarı" asp-for="@Model.repassword">
                                <span class="text-danger" asp-validation-for="@Model.repassword"></span>
                            </div>
                        </div>
                        <div class="form-row mb-2">
                            <div class="col-md-12">
                                <label>E-Mail</label>
                                <input type="email" class="form-control" placeholder="E-Mail" asp-for="@Model.mail">
                                <span class="text-danger" asp-validation-for="@Model.mail"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                        <p>

                            <a href="/Login/Index">Bir Hesabınız Var mı ?</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>

</html>